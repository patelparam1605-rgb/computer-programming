# include < stdio .h >

 int main ()
 {
 int sub1 , sub2 , sub3 , total , average ;
 printf (" Enter marks of subject 1:");
 scanf ("%d" ,& sub1 );
 printf (" Enter marks of subject 2:");
 scanf ("%d" ,& sub2 );
 printf (" Enter marks of subject 3:");
 scanf ("%d" ,& sub3 );
 total = sub1 + sub2 + sub3 ;
 average = total /3;
 printf (" Total Marks : total = %d\n", total );
 printf (" Average Marks : average = %d\n", average );
 return 0;
 }